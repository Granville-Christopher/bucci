<%- include("partials/header.ejs") %>

    <div class="container wishlist-page">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="index.html">Home</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">Cart</li>
            </ol>
        </nav>

        

        <div class="container mt-5">
            <div class="row">
                <!-- Shopping Cart Items Section -->
                <div class="col-md-8">
                    <h2>Shopping Cart</h2>
                    <div id="cart-container" class="cart-items"></div>
                    <button id="remove-all-cart" class="btn btn-danger mt-3">Remove All</button>
                    <a href="shop" style="float: right;" class="btn btn-secondary mt-3">← Back to Shop</a>
                </div>
        
                <!-- Summary Section -->
                <div class="col-md-4">
                    <div class="summary p-3 bg-light">
                        <h4>Summary</h4>
                        <p>ITEMS <span id="total-items">0</span></p>
                        <p>Subtotal: <span id="subtotal">0.00</span></p>
        
                        <!-- Shipping Option -->
                        <label for="shipping">Shipping</label>
                        <select id="shipping" class="form-control" style="width: fit-content; background-color: aliceblue;">
                            <option value="5" >Standard-Delivery - ₦5.00</option>
                            <option value="10">Express-Delivery - ₦10.00</option>
                        </select>
                        <!-- <select id="shipping">
                            <option value="1000" selected>Standard Delivery - ₦1000</option>
                            <option value="2500">Express Delivery - ₦2500</option>
                          </select>
                           -->
                        <!-- Total Price -->
                        <h5 class="mt-3">Total Price:<span id="total-price">0.00</span></h5>
        
                        <button id="checkoutBtn" class="btn btn-dark btn-lg w-100 mt-3">CHECKOUT</button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
    <script src="https://js.paystack.co/v1/inline.js"></script>
    <%- include("partials/footer.ejs") %>
