<%- include("partials/header.ejs") %>

    <div class="container">
        <div class="d-flex justify-content-center">
            <div class="reset-container ">
                <div class="login-box">
                    <div id="resetpassword">
                        <div class=" p-4">
                            <h3 class="text-center mb-3">Reset Password</h3>
                            
                            <% if (message) { %>
                                <div class="alert alert-info">
                                  <%= message %>
                                </div>
                              <% } %>
                              
                            <form method="POST" action="/request-otp-user">
                                <input type="email" class="get-otp form-control" name="email" placeholder="Enter your email" required>
                                <button type="submit" class="my-2 rounded btn-primary">Get OTP</button>
                            </form>
                            <style>
                                .reset-container {
                                    margin-top: 100px;
                                    width: 100%;
                                    max-width: 400px;
                                    background-color: #f8f9fa;
                                    border-radius: 10px;
                                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                                }

                                .login-box {
                                    padding: 20px;
                                }

                                /* #resetpassword {
                                    display: none;
                                } */
                                form .get-otp{
                                    /* border-radius: 5px;
                                    border: none;
                                    padding: 5px; */
                                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                                }
                                .alert {
                                    margin-top: 10px;
                                }
                            </style>
                            <form method="POST" action="/reset-password-user">
                                <input class="my-2 form-control" type="email" name="email" placeholder="Enter your email" required>
                                <input class="my-2 form-control" type="text" name="otp" placeholder="Enter OTP" required>
                                <input class="my-2 form-control" type="password" name="newPassword" placeholder="New Password" required>
                                <input class="my-2 form-control" type="password" name="confirmPassword" placeholder="Confirm Password" required>
                                <button type="submit" class="my-2 rounded btn-primary">Reset Password</button>
                            </form>
        
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>
    <%- include("partials/footer.ejs") %>